{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "charset": "utf8",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "strict": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": [
            "es2016",
            "dom"
        ],
        "baseUrl": "./",
		"paths": {
			"@models/*": ["../models/*"]
		}
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}